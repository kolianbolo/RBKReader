<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.bolobanov.rbkreader">

    <application
        android:name=".RbkReaderApplication_"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity_"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.DashActivity_"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".activity.ListActivity_"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".activity.WebActivity_"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".activity.RbkPreferenceActivity"
            android:label="@string/app_name"></activity>

        <service
            android:name=".LoadService_"
            android:exported="false"
            android:stopWithTask="true"
            android:label="@string/settings_title"></service>
    </application>


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>
